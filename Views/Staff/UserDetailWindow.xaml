<Window x:Class="UniversityRoomBooking.Views.UserDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Detail" Height="550" Width="700"
        Background="#FFF8F8F8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="👤 User Detail"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#FF3366FF"
                   Margin="0,0,0,15"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">

            <Border Grid.Row="1" Background="White" CornerRadius="10"
                BorderBrush="#FFD0D0D0" BorderThickness="1" Padding="20">
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">

                    <WrapPanel Margin="0,5">
                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="User ID" FontWeight="Bold"/>
                            <TextBox x:Name="txtUserId" IsReadOnly="True" Background="#FFF2F2F2"/>
                        </StackPanel>

                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Username" FontWeight="Bold"/>
                            <TextBox x:Name="txtUsername" IsReadOnly="True" Background="#FFF2F2F2"/>
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel Margin="0,5">
                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Full Name" FontWeight="Bold"/>
                            <TextBox x:Name="txtFullName"/>
                        </StackPanel>

                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Email" FontWeight="Bold"/>
                            <TextBox x:Name="txtEmail"/>
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel Margin="0,5">
                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Phone" FontWeight="Bold"/>
                            <TextBox x:Name="txtPhone"/>
                        </StackPanel>

                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Date of Birth" FontWeight="Bold"/>
                            <DatePicker x:Name="dpDOB"/>
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel Margin="0,5">
                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Gender" FontWeight="Bold"/>
                            <ComboBox x:Name="cbGender">
                                <ComboBoxItem Content="male"/>
                                <ComboBoxItem Content="female"/>
                                <ComboBoxItem Content="other"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Role" FontWeight="Bold"/>
                            <ComboBox x:Name="cbRole">
                                <ComboBoxItem Content="Student"/>
                                <ComboBoxItem Content="Lecturer"/>
                                <ComboBoxItem Content="Staff"/>
                            </ComboBox>
                        </StackPanel>
                    </WrapPanel>

                    <StackPanel Margin="10">
                        <TextBlock Text="Status" FontWeight="Bold"/>
                        <TextBox x:Name="txtStatus" IsReadOnly="True" Background="#FFF2F2F2"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer> 

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="0,20,0,0">
            <Button Content="💾 Save"
            Width="120" Margin="8"
            Background="#4CAF50" Foreground="White"
            FontWeight="Bold" Padding="8,5"
            BorderThickness="0" Cursor="Hand"
            Click="BtnSave_Click"/>

            <Button Content="🔒 Toggle Status"
            Width="150" Margin="8"
            Background="#616161" Foreground="White"
            FontWeight="Bold" Padding="8,5"
            BorderThickness="0" Cursor="Hand"
            Click="BtnToggle_Click"/>

            <Button Content="🔁 Reset Password"
            Width="150" Margin="8"
            Background="#FFC107" Foreground="Black"
            FontWeight="Bold" Padding="8,5"
            BorderThickness="0" Cursor="Hand"
            Click="BtnReset_Click"/>

            <Button Content="⬅️ Back"
            Width="120" Margin="8"
            Background="#9E9E9E" Foreground="White"
            FontWeight="Bold" Padding="8,5"
            BorderThickness="0" Cursor="Hand"
            Click="BtnBack_Click"/>
        </StackPanel>

    </Grid>
</Window>
