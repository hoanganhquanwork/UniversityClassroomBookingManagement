<Window x:Class="UniversityClassroomBookingManagement.Views.Staff.StaffProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FPTU Room Booking - Staff Profile"
        Height="768" Width="1493"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">

    <DockPanel>
        <Grid Background="#F8F9FA">
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Staff Profile"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333"
                           Margin="43,51,-43,522" Grid.Row="1"/>

                <Border Grid.Row="1"
                        Padding="40"
                        Background="White"
                        CornerRadius="20"
                        BorderBrush="#DDD"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Profile Picture -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <Border Width="150" Height="150"
                                    CornerRadius="75"
                                    BorderBrush="#CCC"
                                    BorderThickness="2"
                                    Margin="0,0,0,15"
                                    HorizontalAlignment="Center">
                                <Image x:Name="imgProfile"
                                       Stretch="UniformToFill"
                                       ClipToBounds="True"
                                       Width="150" Height="150"/>
                            </Border>

                            <Button Content="Change Photo"
                                    Width="120"
                                    Height="35"
                                    Background="#0078D7"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Center"
                                    Margin="0,10,0,0"
                                    Click="btnChangePicture_Click"/>
                        </StackPanel>

                        <!-- Staff Info -->
                        <Grid Grid.Column="2" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Full Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtFullName" Grid.Row="0" Grid.Column="1" Margin="0,5,0,10"/>

                            <TextBlock Text="Email:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1" Margin="0,5,0,10"/>

                            <TextBlock Text="Phone Number:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtPhone" Grid.Row="2" Grid.Column="1" Margin="0,5,0,10"/>

                            <TextBlock Text="Gender:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cbGender" Grid.Row="3" Grid.Column="1" Margin="0,5,0,10">
                                <ComboBoxItem Tag="male" Content="Male"/>
                                <ComboBoxItem Tag="female" Content="Female"/>
                                <ComboBoxItem Tag="other" Content="Other"/>
                            </ComboBox>

                            <TextBlock Text="Date of Birth:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                            <DatePicker x:Name="dpDateOfBirth" Grid.Row="4" Grid.Column="1" Margin="0,5,0,10"/>

                            <TextBlock Text="Position:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtPosition" Grid.Row="5" Grid.Column="1" Margin="0,5,0,10"/>

                            <TextBlock Text="Status:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtStatus" Grid.Row="6" Grid.Column="1" IsReadOnly="True" Margin="0,5,0,20"/>

                            <Button Content="Update"
                                    Grid.Row="7" Grid.Column="1"
                                    Width="150"
                                    Height="40"
                                    Background="#0078D7"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Left"
                                    Click="btnUpdate_Click"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
