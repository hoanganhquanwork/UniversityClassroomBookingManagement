<Window x:Class="UniversityClassroomBookingManagement.Views.StudentAndLecturer.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sidebar="clr-namespace:UniversityClassroomBookingManagement.Views.sidebar"
        Title="FPTU Room Booking - My Requests"
        Height="768" Width="1493"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        ResizeMode="NoResize">
    <DockPanel Margin="0,0,0,-6">
        <sidebar:Sidebar DockPanel.Dock="Left" Loaded="Sidebar_Loaded"/>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="My Requests"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333333"/>
                <TextBlock Text="  |  Lịch sử đặt phòng"
                           FontSize="16"
                           Foreground="#FF6600"
                           VerticalAlignment="Bottom"
                           Margin="6,0,0,2"/>
            </StackPanel>

            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="8"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Margin="0,0,0,20"
                    Padding="10">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                    <TextBox Width="300" Height="34"
                             Margin="0,0,10,0"
                             FontSize="13"
                             BorderBrush="#DDD"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"
                             ToolTip="Tìm kiếm theo mục đích, phòng hoặc ghi chú"/>

                    <ComboBox Width="160" Height="34"
                              Margin="0,0,10,0"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Tất cả trạng thái"/>
                        <ComboBoxItem Content="Đang chờ duyệt"/>
                        <ComboBoxItem Content="Đã duyệt"/>
                        <ComboBoxItem Content="Từ chối"/>
                        <ComboBoxItem Content="Đã hủy"/>
                    </ComboBox>

                    <DatePicker Width="160" Height="34"
                                Margin="0,0,10,0"
                                ToolTip="Lọc theo ngày sử dụng"/>
                    <Button Content="Làm mới"
                            Width="100" Height="34"
                            Background="#FF6600"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderBrush="#FF6600"
                            Cursor="Hand"/>
                </StackPanel>
            </Border>
            <Border Grid.Row="2"
                    Background="White"
                    CornerRadius="8"
                    Padding="10"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <DataGrid x:Name="dgRequests"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          HeadersVisibility="Column"
                          RowHeight="40"
                          FontSize="14"
                          BorderThickness="0"
                          GridLinesVisibility="None"
                          AlternatingRowBackground="#FFF9F5"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          LoadingRow="dgRequests_LoadingRow">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                        <DataGridTextColumn Header="Ngày dùng" Binding="{Binding Date}" Width="130"/>
                        <DataGridTextColumn Header="Phòng" Binding="{Binding Room}" Width="160"/>
                        <DataGridTextColumn Header="Khung giờ" Binding="{Binding Time}" Width="160"/>
                        <DataGridTextColumn Header="Mục đích" Binding="{Binding Purpose}" Width="*"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="120"/>

                        <DataGridTemplateColumn Header="Hành động" Width="260">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">

                                        <Button x:Name="btnView"
                                                Content="Xem"
                                                Margin="2" Padding="8,2"
                                                Background="#E5F4FF"
                                                BorderBrush="#CCE8FF"
                                                Cursor="Hand"
                                                Click="BtnView_Click"/>

                                        <Button x:Name="btnEdit"
                                                Content="Sửa"
                                                Margin="2" Padding="8,2"
                                                Background="#E8EAF6"
                                                BorderBrush="#D1D4E0"
                                                Cursor="Hand"
                                                Click="BtnEdit_Click"/>

                                        <Button x:Name="btnDelete"
                                                Content="Xóa"
                                                Margin="2" Padding="8,2"
                                                Background="#FFE5E5"
                                                BorderBrush="#F5C2C2"
                                                Cursor="Hand"
                                                Click="BtnDelete_Click"/>

                                        <Button x:Name="btnCancel"
                                                Content="Hủy"
                                                Margin="2" Padding="8,2"
                                                Background="#FFF3E6"
                                                BorderBrush="#FFD8B0"
                                                Cursor="Hand"
                                                Click="BtnCancel_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
