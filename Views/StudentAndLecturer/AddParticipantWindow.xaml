<Window x:Class="UniversityClassroomBookingManagement.Views.StudentAndLecturer.AddParticipantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Student to Request"
        Height="455" Width="580"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <StackPanel Margin="20,20,68,-6">
        <TextBlock Text="Enter student name or ID:"
                   FontSize="14"
                   FontWeight="SemiBold"/>
        <TextBox x:Name="txtSearch"
                 Height="30"
                 Margin="0,10,0,10"
                 Padding="6"
                 FontSize="13"
                 BorderBrush="#CCC"
                 BorderThickness="1"
                 TextChanged="txtSearch_TextChanged"
                 Width="466"/>

        <ListBox x:Name="lstSuggestions"
                 Height="250"
                 DisplayMemberPath="FullName"
                 MouseDoubleClick="lstSuggestions_MouseDoubleClick"
                 BorderBrush="#E0E0E0"
                 BorderThickness="1"
                 Width="471"
                 Margin="0,0,0,10"/>

        <Button Content="Close"
                Width="100"
                Height="35"
                Click="BtnClose_Click"/>
    </StackPanel>
</Window>
