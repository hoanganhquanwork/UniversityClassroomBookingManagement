<Window x:Class="UniversityRoomBooking.Views.BuildingManageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Building Management" Height="550" Width="850"
        Background="#FFF8F8F8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🏢 Building Management"
                   FontSize="26" FontWeight="Bold" Foreground="#FF3366FF"
                   Margin="0,0,0,10"/>

        <!-- DataGrid -->
        <Border Grid.Row="1" Background="White" CornerRadius="10"
                BorderBrush="#FFD0D0D0" BorderThickness="1" Padding="10">
            <DataGrid x:Name="dgvBuildings" AutoGenerateColumns="False"
                      IsReadOnly="True" SelectionMode="Single"
                      SelectionChanged="dgvBuildings_SelectionChanged"
                      AlternatingRowBackground="#FFF2F2F2" FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding BuildingId}" Width="60"/>
                    <DataGridTextColumn Header="Building Name" Binding="{Binding BuildingName}" Width="200"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Form -->
        <Border Grid.Row="2" Background="White" CornerRadius="10"
                BorderBrush="#FFD0D0D0" BorderThickness="1" Padding="15" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="10" Grid.Column="0">
                    <Label Content="Building Name" FontWeight="Bold" Foreground="#444"/>
                    <TextBox x:Name="txtBuildingName" Height="30" FontSize="14"/>
                </StackPanel>

                <StackPanel Margin="10" Grid.Column="1">
                    <Label Content="Description" FontWeight="Bold" Foreground="#444"/>
                    <TextBox x:Name="txtDescription" Height="30" FontSize="14"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="10,25,0,0">
                    <Button Content="➕ Add" Width="80" Margin="5" Background="#FF6BAA00" Click="BtnAdd_Click"/>
                    <Button Content="✏️ Edit" Width="80" Margin="5" Background="#FF008CBA" Click="BtnEdit_Click"/>
                    <Button Content="🗑️ Delete" Width="80" Margin="5" Background="#FFB00020" Click="BtnDelete_Click"/>
                    <Button Content="🔄 Refresh" Width="80" Margin="5" Background="#FF666666" Click="BtnRefresh_Click"/>
                    <Button Content="⬅️ Back" Width="80" Margin="5" Background="#FF777777" Click="BtnBack_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
