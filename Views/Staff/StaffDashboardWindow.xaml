<Window x:Class="UniversityClassroomBookingManagement.Views.Dashboard.StaffDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Staff Dashboard"
        Height="700" Width="1050"
        Background="#FFF8F8F8"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- 🎨 Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" BlurRadius="8" Direction="270" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF6600"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FF6600" BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.04" ScaleY="1.04"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header FPT -->
        <DockPanel Background="#FF6600" Height="80" LastChildFill="False" VerticalAlignment="Top">
            <!-- Logo -->
            <Image Source="pack://application:,,,/Assets/images/logo.png"
                   Height="60" Margin="20,10,0,10"
                   DockPanel.Dock="Left"/>

            <!-- Greeting -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" DockPanel.Dock="Left" Margin="15,0,0,0">
                <TextBlock Text="Hello, " FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                <TextBlock x:Name="txtStaffName" FontSize="18" FontWeight="Bold" Foreground="White"/>
            </StackPanel>

            <!-- Logout button -->
            <Button x:Name="btnLogout"
        Content="Logout"
        FontWeight="Bold"
        Padding="8,4"
        Background="White"
        Foreground="#FF6600"
        Margin="0,0,20,0"
        DockPanel.Dock="Right"
        Cursor="Hand"
        Width="90" Height="32"
        Click="BtnLogout_Click">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.25"/>
                </Button.Effect>
            </Button>

            <Button x:Name="btnCPW"
                Content="Change Password"
                FontWeight="Bold"
                Padding="8,4"
                Background="#FF6600"
                Foreground="#FFFFFF"
                DockPanel.Dock="Right"
                Cursor="Hand"
                Click="btnCPW_Click" Width="145" Height="36" Margin="10px">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.25"/>
                </Button.Effect>
            </Button>


        </DockPanel>

        <!-- Cards Section -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <UniformGrid Columns="3" Rows="2" Margin="30,20">

                <!-- Card: Room Management -->
                <Border Style="{StaticResource CardStyle}" MouseLeftButtonUp="OpenRoomManage_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path Data="M3,5H21V19H3V5M19,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3Z"
                              Fill="#FF6600" Width="40" Height="40" Margin="0,10"/>
                        <TextBlock Text="Room Management" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,5"/>
                        <TextBlock Text="Manage classrooms and equipment." Foreground="#777" FontSize="13" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Card: Time Slot Management -->
                <Border Style="{StaticResource CardStyle}" MouseLeftButtonUp="OpenTimeSlot_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path Data="M12,20A8,8 0 1,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 1,1 2,12A10,10 0 0,1 12,2M13,7H11V13H16V11H13V7Z"
                              Fill="#FF6600" Width="40" Height="40" Margin="0,10"/>
                        <TextBlock Text="Time Slot Management" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,5"/>
                        <TextBlock Text="Configure and edit available time slots." Foreground="#777" FontSize="13" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Card: User Management -->
                <Border Style="{StaticResource CardStyle}" MouseLeftButtonUp="OpenUserManage_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path Data="M12,19.2C9.5,19.2 4,20.7 4,23.2V25H20V23.2C20,20.7 14.5,19.2 12,19.2M12,17C14.21,17 16,15.21 16,13C16,10.79 14.21,9 12,9C9.79,9 8,10.79 8,13C8,15.21 9.79,17 12,17Z"
                              Fill="#FF6600" Width="40" Height="40" Margin="0,10"/>
                        <TextBlock Text="User Management" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,5"/>
                        <TextBlock Text="View and manage system users." Foreground="#777" FontSize="13" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Card: Room Request Approval -->
                <Border Style="{StaticResource CardStyle}" MouseLeftButtonUp="OpenRequestApproval_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path Data="M12,20A8,8 0 1,0 4,12A8,8 0 0,0 12,20M10,17L5,12L6.41,10.59L10,14.17L17.59,6.58L19,8L10,17Z"
                              Fill="#FF6600" Width="40" Height="40" Margin="0,10"/>
                        <TextBlock Text="Room Request Approval" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,5"/>
                        <TextBlock Text="Approve, reject or cancel room bookings." Foreground="#777" FontSize="13" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Card: Building Management -->
                <Border Style="{StaticResource CardStyle}" MouseLeftButtonUp="OpenBuildingManage_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path Data="M4,22H20V20H4V22M4,2V18H20V2H4Z"
                              Fill="#FF6600" Width="40" Height="40" Margin="0,10"/>
                        <TextBlock Text="Building Management" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,5"/>
                        <TextBlock Text="Manage buildings and facilities." Foreground="#777" FontSize="13" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Card: Reports -->
                <Border Style="{StaticResource CardStyle}" MouseLeftButtonUp="OpenReports_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path Data="M3,3H21V5H3V3M7,8H17V10H7V8M11,13H13V21H11V13Z"
                              Fill="#FF6600" Width="40" Height="40" Margin="0,10"/>
                        <TextBlock Text="My Profile" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,5"/>
                        <TextBlock Text="View booking and usage reports." Foreground="#777" FontSize="13" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Window>
