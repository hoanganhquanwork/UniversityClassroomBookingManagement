<Window x:Class="UniversityRoomBooking.Views.UserManageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Management" Height="600" Width="950"
        Background="#FFF8F8F8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="👥 User Management"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#FF3366FF"
                   Margin="0,0,0,15"/>

        <!-- Filter -->
        <Border Grid.Row="1" Background="White" CornerRadius="8"
                BorderBrush="#FFD0D0D0" BorderThickness="1"
                Padding="10" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <StackPanel Margin="10,0">
                    <TextBlock Text="Search by Name/Email" FontWeight="Bold"/>
                    <TextBox x:Name="txtSearch" Width="200"/>
                </StackPanel>

                <StackPanel Margin="10,0">
                    <TextBlock Text="Role" FontWeight="Bold"/>
                    <ComboBox x:Name="cbRoleFilter" Width="150">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Student"/>
                        <ComboBoxItem Content="Lecturer"/>
                        <ComboBoxItem Content="Staff"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="10,0">
                    <TextBlock Text="Status" FontWeight="Bold"/>
                    <ComboBox x:Name="cbStatusFilter" Width="150">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="active"/>
                        <ComboBoxItem Content="deactivated"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="20,10,0,0">
                    <Button Content="🔍 Search" 
            Background="#4CAF50" 
            Foreground="White"
            FontWeight="Bold"
            Padding="10,5"
            BorderThickness="0"
            Margin="0,0,15,0"
            Cursor="Hand"
            Click="BtnSearch_Click" RenderTransformOrigin="0.538,-0.561"/>

                    <Button Content="❌ Clear" 
            Background="#E53935" 
            Foreground="White"
            FontWeight="Bold"
            Padding="10,5"
            BorderThickness="0"
            Cursor="Hand"
            Click="BtnClear_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Background="White" CornerRadius="10"
                BorderBrush="#FFD0D0D0" BorderThickness="1" Padding="10">
            <DataGrid x:Name="dgvUsers"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="dgvUsers_SelectionChanged"
                      AlternatingRowBackground="#FFF2F2F2"
                      FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="60"/>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="120"/>
                    <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                    <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat=\{0:yyyy-MM-dd\}}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
            Grid.Row="3" Margin="0,20,0,0">
            <Button Content="➕ Add" Background="#4CAF50" Foreground="White"
            FontWeight="Bold" Margin="5,0" Padding="10,5"
            BorderThickness="0" Cursor="Hand" Click="BtnAdd_Click"/>

            <Button Content="✏️ Edit" Background="#2196F3" Foreground="White"
            FontWeight="Bold" Margin="5,0" Padding="10,5"
            BorderThickness="0" Cursor="Hand" Click="BtnEdit_Click"/>

            <Button Content="🗑️ Delete" Background="#E53935" Foreground="White"
            FontWeight="Bold" Margin="5,0" Padding="10,5"
            BorderThickness="0" Cursor="Hand" Click="BtnDelete_Click"/>

            <Button Content="🔒 Toggle" Background="#616161" Foreground="White"
            FontWeight="Bold" Margin="5,0" Padding="10,5"
            BorderThickness="0" Cursor="Hand" Click="BtnToggle_Click"/>

            <Button Content="🔁 Reset" Background="#FFC107" Foreground="Black"
            FontWeight="Bold" Margin="5,0" Padding="10,5"
            BorderThickness="0" Cursor="Hand" Click="BtnReset_Click"/>

            <Button Content="⬅️ Back" Background="#9E9E9E" Foreground="White"
            FontWeight="Bold" Margin="5,0" Padding="10,5"
            BorderThickness="0" Cursor="Hand" Click="BtnBack_Click"/>
            <Button Content="🔁 Refresh" Background="#9F10" Foreground="White"
            FontWeight="Bold" Margin="5,0" Padding="10,5"
            BorderThickness="0" Cursor="Hand" Click="BtnRefresh_Click"/>
        </StackPanel>

    </Grid>
</Window>
