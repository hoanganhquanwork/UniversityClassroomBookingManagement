<Window x:Class="UniversityClassroomBookingManagement.Views.StudentAndLecturer.RoomBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sidebar="clr-namespace:UniversityClassroomBookingManagement.Views.sidebar"
        Title="FPTU Room Booking"
        Height="768" Width="1493"
        Background="#F8F9FA"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <DockPanel>
        <sidebar:Sidebar x:Name="sidebarControl" DockPanel.Dock="Left" Loaded="Sidebar_Loaded"/>
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Room Booking"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333333"/>
                <TextBlock Text="  |  Availability Schedule"
                           FontSize="16"
                           Foreground="#FF6600"
                           VerticalAlignment="Bottom"
                           Margin="6,0,0,2"/>
            </StackPanel>

            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="8"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                    <DatePicker x:Name="datePicker"
                                Width="180" Height="34"
                                SelectedDate="{x:Static sys:DateTime.Now}"
                                xmlns:sys="clr-namespace:System;assembly=mscorlib"
                                Margin="0,0,10,0"/>

                    <Button Content="View"
                            Width="100" Height="34"
                            Background="#FF6600"
                            Foreground="White"
                            BorderBrush="#FF6600"
                            Cursor="Hand"
                          />
                </StackPanel>
            </Border>

            <Border Grid.Row="2"
                    Background="White"
                    CornerRadius="8"
                    Padding="10"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <DataGrid x:Name="dgRoomSlots"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              HeadersVisibility="Column"
                              RowHeight="40"
                              FontSize="13"
                              GridLinesVisibility="None"
                              AlternatingRowBackground="#FFF9F5"
                              IsReadOnly="True"
                              BorderThickness="0">
                    </DataGrid>
                </ScrollViewer>
            </Border>
        </Grid>
    </DockPanel>
</Window>
