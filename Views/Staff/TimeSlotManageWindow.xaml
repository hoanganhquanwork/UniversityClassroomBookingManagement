<Window x:Class="UniversityRoomBooking.Views.TimeSlotManageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Time Slot Management" Height="500" Width="700"
        Background="#FFF8F8F8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="⏰ Time Slot Management"
                   FontSize="26" FontWeight="Bold" Foreground="#FF3366FF"/>

        <Border Grid.Row="1" Background="White" CornerRadius="10"
                BorderBrush="#FFD0D0D0" BorderThickness="1" Padding="10">
            <DataGrid x:Name="dgvSlots" AutoGenerateColumns="False"
                      IsReadOnly="True" SelectionMode="Single"
                      SelectionChanged="dgvSlots_SelectionChanged"
                      AlternatingRowBackground="#FFF2F2F2" FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding SlotId}" Width="60"/>
                    <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime, StringFormat='{}{0:HH\\:mm}'}" Width="150"/>
                    <DataGridTextColumn Header="End Time" Binding="{Binding EndTime, StringFormat='{}{0:HH\\:mm}'}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="0,40,0,10" Grid.Column="0" Grid.Row="0">
                <Label Content="Slot ID" FontWeight="Bold" Foreground="#FF444444"/>
                <TextBox x:Name="txtSlotId" Height="30" FontSize="14"/>
            </StackPanel>

            <StackPanel Margin="10,40,0,10" Grid.Column="1" Grid.Row="0">
                <Label Content="Start Time" FontWeight="Bold" Foreground="#444"/>
                <TextBox x:Name="txtStartTime" Height="30" FontSize="14"/>
            </StackPanel>

            <StackPanel Margin="10,40,0,10" Grid.Column="2" Grid.Row="0">
                <Label Content="End Time" FontWeight="Bold" Foreground="#444"/>
                <TextBox x:Name="txtEndTime" Height="30" FontSize="14"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="➕ Add"
            Width="80" Margin="5"
            Background="#4CAF50" Foreground="White"
            FontWeight="Bold" BorderThickness="0"
            Cursor="Hand" Click="BtnAdd_Click"/>

                <Button Content="✏️ Edit"
            Width="80" Margin="5"
            Background="#2196F3" Foreground="White"
            FontWeight="Bold" BorderThickness="0"
            Cursor="Hand" Click="BtnEdit_Click"/>

                <Button Content="🗑️ Delete"
            Width="80" Margin="5"
            Background="#E53935" Foreground="White"
            FontWeight="Bold" BorderThickness="0"
            Cursor="Hand" Click="BtnDelete_Click"/>

                <Button Content="🔄 Refresh"
            Width="80" Margin="5"
            Background="#757575" Foreground="White"
            FontWeight="Bold" BorderThickness="0"
            Cursor="Hand" Click="BtnRefresh_Click"/>

                <Button Content="⬅️ Back"
            Width="80" Margin="5"
            Background="#9E9E9E" Foreground="White"
            FontWeight="Bold" BorderThickness="0"
            Cursor="Hand" Click="BtnBack_Click"/>
            </StackPanel>

        </Grid>

    </Grid>
</Window>
