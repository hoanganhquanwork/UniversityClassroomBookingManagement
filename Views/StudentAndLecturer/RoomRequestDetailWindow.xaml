<Window x:Class="UniversityClassroomBookingManagement.Views.StudentAndLecturer.RoomRequestDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sidebar="clr-namespace:UniversityClassroomBookingManagement.Views.sidebar"
        Title="FPTU Room Booking - Request Detail"
        Height="768" Width="1450"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        ResizeMode="NoResize">

    <DockPanel>
        <sidebar:Sidebar DockPanel.Dock="Left" Loaded="Sidebar_Loaded"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                    <TextBlock Text="Request Details"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#333333"/>
                    <TextBlock x:Name="lblMode"
                               Text="  |  View Request Information"
                               FontSize="16"
                               Foreground="#888"
                               VerticalAlignment="Bottom"
                               Margin="6,0,0,4"/>
                </StackPanel>

                <Border Grid.Row="1"
                        Background="White"
                        CornerRadius="12"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Padding="30">
                    <StackPanel Margin="10">

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Request ID:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="txtRequestId"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Room:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="txtRoom"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Date of Use:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="txtDate"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Time Slot:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSlot"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="Status:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="txtStatus"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                            <TextBlock Text="Staff Feedback:" Width="180" FontWeight="Bold"/>
                            <TextBox x:Name="txtStaffNote"
                                     Width="600"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     BorderBrush="#DDD"
                                     BorderThickness="1"
                                     Padding="5"
                                     FontSize="13"
                                     Background="#FAFAFA"
                                     AcceptsReturn="True"
                                     IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Purpose:" Width="180" FontWeight="Bold"/>
                            <TextBox x:Name="txtPurpose"
                                     Width="600"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     BorderBrush="#DDD"
                                     BorderThickness="1"
                                     Padding="5"
                                     FontSize="13"
                                     Background="#FAFAFA"
                                     AcceptsReturn="True"/>
                        </StackPanel>

                        <GroupBox x:Name="grpParticipants"
                                  Header="List of Participating Students"
                                  Margin="0,40,0,0"
                                  FontWeight="SemiBold"
                                  BorderBrush="#DDD">
                            <StackPanel>
                                <ListBox x:Name="lstParticipants"
                                         Height="180"
                                         DisplayMemberPath="FullName"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"/>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="0,10,0,0">
                                    <Button x:Name="btnAdd"
                                            Content="➕ Add"
                                            Width="100" Height="34"
                                            Background="#E5F4FF"
                                            BorderBrush="#CCE8FF"
                                            Foreground="#0078D7"
                                            Cursor="Hand"
                                            Click="BtnAddParticipant_Click"/>
                                    <Button x:Name="btnRemove"
                                            Content="➖ Remove"
                                            Width="100" Height="34"
                                            Background="#FFE5E5"
                                            BorderBrush="#F5C2C2"
                                            Foreground="#C62828"
                                            Cursor="Hand"
                                            Click="BtnRemoveParticipant_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,25,0,0">
                    <Button x:Name="btnSave"
                            Content="💾 Save Changes"
                            Width="150" Height="40"
                            Background="#FF6600"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderBrush="#FF6600"
                            Cursor="Hand"
                            Click="BtnSave_Click"/>
                    <Button Content="✖ Close"
                            Width="110" Height="40"
                            Background="#E0E0E0"
                            Foreground="#333"
                            BorderBrush="#CCC"
                            Cursor="Hand"
                            Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>
