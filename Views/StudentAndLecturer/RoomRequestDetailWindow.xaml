<Window x:Class="UniversityClassroomBookingManagement.Views.StudentAndLecturer.RoomRequestDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sidebar="clr-namespace:UniversityClassroomBookingManagement.Views.sidebar"
        Title="FPTU Room Booking - Request Detail"
        Height="768" Width="1450"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        ResizeMode="NoResize">

    <DockPanel>
        <!-- Sidebar tái sử dụng -->
        <sidebar:Sidebar DockPanel.Dock="Left" Loaded="Sidebar_Loaded"/>

        <!-- Nội dung chính -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tiêu đề -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                    <TextBlock Text="Chi tiết yêu cầu"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#333333"/>
                    <TextBlock x:Name="lblMode"
                               Text="  |  Xem thông tin yêu cầu"
                               FontSize="16"
                               Foreground="#888"
                               VerticalAlignment="Bottom"
                               Margin="6,0,0,4"/>
                </StackPanel>

                <!-- Thông tin yêu cầu -->
                <Border Grid.Row="1"
                        Background="White"
                        CornerRadius="12"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Padding="30">
                    <StackPanel Margin="10" >

                        <!-- Mã yêu cầu -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Mã yêu cầu:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="txtRequestId"/>
                        </StackPanel>

                        <!-- Phòng -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Phòng:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="txtRoom"/>
                        </StackPanel>

                        <!-- Ngày sử dụng -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Ngày sử dụng:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="txtDate"/>
                        </StackPanel>

                        <!-- Khung giờ -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Khung giờ:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSlot"/>
                        </StackPanel>

                        <!-- Trạng thái -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="Trạng thái:" Width="180" FontWeight="Bold"/>
                            <TextBlock x:Name="txtStatus"/>
                        </StackPanel>

                        <!-- Phản hồi từ Staff -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                            <TextBlock Text="Phản hồi từ nhân viên:" Width="180" FontWeight="Bold"/>
                            <TextBox x:Name="txtStaffNote"
                                     Width="600"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     BorderBrush="#DDD"
                                     BorderThickness="1"
                                     Padding="5"
                                     FontSize="13"
                                     Background="#FAFAFA"
                                     AcceptsReturn="True"
                                     IsReadOnly="True"/>
                        </StackPanel>

                        <!-- Mục đích -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Mục đích:" Width="180" FontWeight="Bold"/>
                            <TextBox x:Name="txtPurpose"
                                     Width="600"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     BorderBrush="#DDD"
                                     BorderThickness="1"
                                     Padding="5"
                                     FontSize="13"
                                     Background="#FAFAFA"
                                     AcceptsReturn="True"/>
                        </StackPanel>

                        <!-- Danh sách sinh viên -->
                        <GroupBox x:Name="grpParticipants"
                                  Header="Danh sách sinh viên tham gia"
                                  Margin="0,40,0,0"
                                  FontWeight="SemiBold"
                                  BorderBrush="#DDD">
                            <StackPanel>
                                <ListBox x:Name="lstParticipants"
                                         Height="180"
                                         DisplayMemberPath="FullName"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"/>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="0,10,0,0">
                                    <Button x:Name="btnAdd"
                                            Content="➕ Thêm"
                                            Width="100" Height="34"
                                            Background="#E5F4FF"
                                            BorderBrush="#CCE8FF"
                                            Foreground="#0078D7"
                                            Cursor="Hand"
                                            Click="BtnAddParticipant_Click"/>
                                    <Button x:Name="btnRemove"
                                            Content="➖ Xóa"
                                            Width="100" Height="34"
                                            Background="#FFE5E5"
                                            BorderBrush="#F5C2C2"
                                            Foreground="#C62828"
                                            Cursor="Hand"
                                            Click="BtnRemoveParticipant_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,25,0,0">
                    <Button x:Name="btnSave"
                            Content="💾 Lưu thay đổi"
                            Width="150" Height="40"
                            Background="#FF6600"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderBrush="#FF6600"
                            Cursor="Hand"
                            Click="BtnSave_Click"/>
                    <Button Content="✖ Đóng"
                            Width="110" Height="40"
                            Background="#E0E0E0"
                            Foreground="#333"
                            BorderBrush="#CCC"
                            Cursor="Hand"
                            Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>
