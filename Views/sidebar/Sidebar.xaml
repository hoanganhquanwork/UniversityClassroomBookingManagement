<UserControl x:Class="UniversityClassroomBookingManagement.Views.sidebar.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="230">

    <UserControl.Resources>
        <Style TargetType="RadioButton" x:Key="SidebarButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Path" x:Key="SidebarIcon">
            <Setter Property="Fill" Value="White"/>
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FF6600" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="0" HorizontalAlignment="Center">
            <Image Source="pack://application:,,,/Assets/images/logo.png"
                   Width="200" Height="60"
                   Stretch="Uniform"
                   Margin="0,20,0,20"/>
        </Border>

        <StackPanel Grid.Row="1" Margin="10,10,0,0">
            <RadioButton x:Name="Nav_MyRequests"
                         Style="{StaticResource SidebarButton}"
                         IsChecked="True"
                         Click="Nav_MyRequests_Click"
                         Height="33" Width="210">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M19,19H5V8H19M19,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M16,1H8V3H16V1Z"
                          Style="{StaticResource SidebarIcon}" Height="20" Width="20" Margin="5"/>
                    <TextBlock Text="My Requests" VerticalAlignment="Center"/>
                </StackPanel>
            </RadioButton>

            <RadioButton x:Name="Nav_BookRoom"
                         Style="{StaticResource SidebarButton}"
                         Click="Nav_BookRoom_Click">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                          Style="{StaticResource SidebarIcon}" Height="21" Width="20" Margin="5"/>
                    <TextBlock Text="Book a Room" VerticalAlignment="Center"/>
                </StackPanel>
            </RadioButton>

            <RadioButton x:Name="Nav_Profile"
                         Style="{StaticResource SidebarButton}"
                         Click="Nav_Profile_Click">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M12,12C14.21,12 16,10.21 16,8C16,5.79 14.21,4 12,4C9.79,4 8,5.79 8,8C8,10.21 9.79,12 12,12M12,14C9.33,14 4,15.33 4,18V20H20V18C20,15.33 14.67,14 12,14Z"
                          Style="{StaticResource SidebarIcon}" Height="21" Width="21" Margin="5"/>
                    <TextBlock Text="Personal Info" VerticalAlignment="Center"/>
                </StackPanel>
            </RadioButton>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10,457,10,78" Grid.RowSpan="2">
            <Separator Margin="0,0,0,15" Opacity="0.3"/>
            <Button x:Name="Nav_Logout"
                    Background="White"
                    Foreground="#FF6600"
                    FontWeight="Bold"
                    Padding="12"
                    Click="Nav_Logout_Click"
                    Cursor="Hand"
                    HorizontalAlignment="Center"
                    Width="160">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.25"/>
                </Button.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Path Data="M14.08,15.59L16.67,13H7V11H16.67L14.08,8.41L15.5,7L20.5,12L15.5,17L14.08,15.59Z"
                          Fill="#FF6600" Width="20" Height="19" Margin="0,0,8,0" Stretch="Fill"/>
                    <TextBlock Text="Đăng xuất" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <TextBlock Text="© 2025 FPT University"
                       Foreground="#FFFFFFAA"
                       FontSize="11"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
