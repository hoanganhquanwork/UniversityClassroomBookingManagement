<Window x:Class="UniversityClassroomBookingManagement.Views.RoomRequestDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Request Details"
        Height="550" Width="750"
        Background="#FFF8F8F8"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="12" BorderBrush="#FFD0D0D0" BorderThickness="1" Background="White" Padding="20" Margin="15">
        <StackPanel>

            <TextBlock Text="📘 Room Request Details"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FF3366FF"
                       Margin="0,0,0,15"/>

            <!-- THAY toàn bộ Grid hiển thị thông tin bằng đoạn này -->
            <Grid Margin="0,10,0,0"
      Grid.IsSharedSizeScope="True">
                <Grid.ColumnDefinitions>
                    <!-- Cột nhãn: Auto + SharedSizeGroup để cố định bề rộng -->
                    <ColumnDefinition Width="Auto" SharedSizeGroup="ColLabel"/>
                    <!-- Cột giá trị: chiếm phần còn lại -->
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- 8 hàng cho 8 trường -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Label bên trái (căn phải cho gọn), Value bên phải (căn giữa dòng) -->
                <Label Grid.Row="0" Grid.Column="0" Content="Requester:" 
           FontWeight="Bold" HorizontalContentAlignment="Right" Margin="0,4,12,4"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtRequester" VerticalAlignment="Center"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Username:" 
           FontWeight="Bold" HorizontalContentAlignment="Right" Margin="0,4,12,4"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtUsername" VerticalAlignment="Center"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Room:" 
           FontWeight="Bold" HorizontalContentAlignment="Right" Margin="0,4,12,4"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtRoom" VerticalAlignment="Center"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Slot:" 
           FontWeight="Bold" HorizontalContentAlignment="Right" Margin="0,4,12,4"/>
                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtSlot" VerticalAlignment="Center"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Date:" 
           FontWeight="Bold" HorizontalContentAlignment="Right" Margin="0,4,12,4"/>
                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtDate" VerticalAlignment="Center"/>

                <Label Grid.Row="5" Grid.Column="0" Content="Purpose:" 
           FontWeight="Bold" HorizontalContentAlignment="Right" Margin="0,4,12,4"/>
                <TextBlock Grid.Row="5" x:Name="txtPurpose" 
               TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Grid.ColumnSpan="2" Margin="82,10,0,10" />

                <Label Grid.Row="6" Grid.Column="0" Content="Status:" 
           FontWeight="Bold" HorizontalContentAlignment="Right" Margin="0,4,12,4"/>
                <TextBlock Grid.Row="6" Grid.Column="1" x:Name="txtStatus" VerticalAlignment="Center"/>

                <Label Grid.Row="7" Grid.Column="0" Content="Remark:" 
           FontWeight="Bold" HorizontalContentAlignment="Right" Margin="0,4,12,4"/>
                <TextBlock Grid.Row="7" x:Name="txtRemark" 
               TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Grid.ColumnSpan="2" Margin="82,10,0,10"/>
            </Grid>


            <TextBlock Text="👥 Participants" FontSize="18" FontWeight="Bold" Margin="0,25,0,10"/>
            <DataGrid x:Name="dgvParticipants"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="#FFF2F2F2"
                      BorderThickness="0"
                      FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Student ID" Binding="{Binding Username}" Width="100"/>
                    <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="200"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="⬅ Close" Width="120" Height="35" Background="#FF777777" Foreground="White"
                        FontWeight="Bold" Click="BtnClose_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
