<Window x:Class="UniversityClassroomBookingManagement.Views.auth.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password"
        Height="482" Width="480"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        ResizeMode="NoResize">

    <Border Margin="30"
            Padding="30"
            Background="White"
            CornerRadius="20"
            BorderBrush="#DDD"
            BorderThickness="1"
            SnapsToDevicePixels="True">

        <StackPanel>
            <TextBlock Text="Change Password"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25"/>

            <!-- Old password -->
            <TextBlock Text="Current Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtOldPassword"
                         Height="35"
                         Margin="0,0,0,15"/>

            <!-- New password -->
            <TextBlock Text="New Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtNewPassword"
                         Height="35"
                         Margin="0,0,0,15"/>

            <!-- Confirm -->
            <TextBlock Text="Confirm New Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtConfirmPassword"
                         Height="35"
                         Margin="0,0,0,25"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="💾 Save"
                        Width="100"
                        Height="38"
                        Background="#0078D7"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="10,0"
                        Click="BtnSave_Click"/>
                <Button Content="❌ Cancel"
                        Width="100"
                        Height="38"
                        Background="#888"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="10,0"
                        Click="BtnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
