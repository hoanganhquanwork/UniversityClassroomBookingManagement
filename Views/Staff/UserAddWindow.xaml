<Window x:Class="UniversityRoomBooking.Views.UserAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New User Account" Height="600" Width="700"
        Background="#FFF8F8F8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="➕ Add New User"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#FF3366FF"
                   Margin="0,0,0,15"/>

        <!-- Form -->
        <Border Grid.Row="1" Background="White" CornerRadius="10"
                BorderBrush="#FFD0D0D0" BorderThickness="1" Padding="20" Margin="0,0,0,40" Grid.RowSpan="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">

                    <!-- Basic Info -->
                    <WrapPanel Margin="0,5">
                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Username" FontWeight="Bold"/>
                            <TextBox x:Name="txtUsername"/>
                        </StackPanel>

                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Email" FontWeight="Bold"/>
                            <TextBox x:Name="txtEmail"/>
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel Margin="0,5">
                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Password" FontWeight="Bold"/>
                            <PasswordBox x:Name="txtPassword"/>
                        </StackPanel>

                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Full Name" FontWeight="Bold"/>
                            <TextBox x:Name="txtFullName"/>
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel Margin="0,5">
                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Phone" FontWeight="Bold"/>
                            <TextBox x:Name="txtPhone"/>
                        </StackPanel>

                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Date of Birth" FontWeight="Bold"/>
                            <DatePicker x:Name="dpDOB"/>
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel Margin="0,5">
                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Gender" FontWeight="Bold"/>
                            <ComboBox x:Name="cbGender">
                                <ComboBoxItem Content="male"/>
                                <ComboBoxItem Content="female"/>
                                <ComboBoxItem Content="other"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Width="300" Margin="10">
                            <TextBlock Text="Role" FontWeight="Bold"/>
                            <ComboBox x:Name="cbRole" SelectionChanged="cbRole_SelectionChanged">
                                <ComboBoxItem Content="Student"/>
                                <ComboBoxItem Content="Lecturer"/>
                                <ComboBoxItem Content="Staff"/>
                            </ComboBox>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="0,20,0,-5">
            <Button Content="💾 Create"
            Width="120" Margin="10"
            Background="#4CAF50" Foreground="White"
            FontWeight="Bold" Padding="8,5"
            BorderThickness="0" Cursor="Hand"
            Click="BtnSave_Click"/>

            <Button Content="❌ Cancel"
            Width="120" Margin="10"
            Background="#E53935" Foreground="White"
            FontWeight="Bold" Padding="8,5"
            BorderThickness="0" Cursor="Hand"
            Click="BtnCancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
